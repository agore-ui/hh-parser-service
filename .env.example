# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=HH Parser Service
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=change-this-secret-key-in-production-minimum-32-characters

# ============================================================================
# API SETTINGS
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# ============================================================================
# HEADHUNTER API
# ============================================================================
HH_API_BASE_URL=https://api.hh.ru
HH_API_TIMEOUT=30
HH_API_RATE_LIMIT=5
HH_API_USER_AGENT=HH Parser Service/1.0

# ============================================================================
# PARSER SETTINGS
# ============================================================================
PARSER_ENABLED=true
PARSER_SCHEDULE_INTERVAL=3600
PARSER_MAX_RETRIES=3
PARSER_RETRY_DELAY=5
PARSER_TIMEOUT=30
PARSER_USE_PROXY=false
PARSER_PROXY_URL=

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=1095

# ============================================================================
# LOGGING
# ============================================================================
LOG_FILE=/var/log/hh_parser/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# ============================================================================
# SECURITY
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# SEARCH FILTERS (Example Keywords)
# ============================================================================
